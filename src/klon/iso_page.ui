<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>

  <template class="IsoPage" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">True</property>
        <property name="child">
          <object class="AdwPreferencesPage">
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Debian Live ISO</property>
                <property name="description">Download the latest standard Debian Live ISO.</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Download ISO</property>
                    <child>
                      <object class="GtkButton" id="iso_dl_button">
                        <property name="label">Download</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">ISO Image</property>
                <property name="description">Select the .iso file to flash.</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Select ISO Image</property>
                    <property name="subtitle">The .iso file to flash</property>
                    <child>
                      <object class="GtkButton" id="iso_file_btn">
                        <property name="icon-name">folder-open-symbolic</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="iso_path_label">
                        <property name="label">No ISO selected</property>
                        <property name="valign">center</property>
                        <property name="margin-end">10</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Target USB Drive</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Select USB Drive</property>
                    <child>
                      <object class="GtkDropDown" id="iso_target_dropdown">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="GtkButton" id="iso_create_btn">
                    <property name="label">Create Recovery Drive</property>
                    <property name="halign">center</property>
                    <property name="margin-top">20</property>
                    <style>
                      <class name="destructive-action"/>
                      <class name="pill"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="iso_status_label">
                    <property name="label">Ready</property>
                    <property name="margin-top">12</property>
                    <style>
                      <class name="status-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkImage">
        <property name="resource">/com/taliskerman/klon/hicolor/512x512/apps/klon-usb.png</property>
        <property name="pixel-size">200</property>
        <property name="margin-bottom">20</property>
        <property name="valign">end</property>
      </object>
    </child>
  </template>
</interface>
